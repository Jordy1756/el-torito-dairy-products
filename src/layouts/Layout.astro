---
import "@fontsource/poppins/300";
import "@fontsource/poppins/400";
import { basics } from "@data";

interface Props {
    title: string;
}

const { title } = Astro.props;
const { summary, ogImage } = basics;
const url = Astro.url;
const hostname = url.hostname;
---

<!doctype html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <title>{title}</title>
        <link rel="icon" type="image/svg+xml" href="/favicon.ico" />

        <slot name="head" />

        <meta name="description" content={summary} />
        <meta property="og:url" content={url} />
        <meta property="og:type" content="website" />
        <meta property="og:title" content={title} />
        <meta property="og:description" content={summary} />
        <meta property="og:image" content={ogImage} />

        <meta name="twitter:card" content="summary_large_image" />
        <meta property="twitter:domain" content={hostname} />
        <meta property="twitter:url" content={url} />
        <meta name="twitter:title" content={title} />
        <meta name="twitter:description" content={summary} />
        <meta name="twitter:image" content={ogImage} />
    </head>
    <body>
        <div id="root" class="root">
            <slot />
        </div>
    </body>
</html>

<style is:global>
    :root {
        --font-family: "Poppins", "Open Sans", sans-serif, system-ui;
        --font-weight-normal: 300;
        --font-weight-title: 400;

        --text-size-mega: clamp(2.027rem, 5vw + 1rem, 3.815rem);
        --text-size-huge: clamp(1.802rem, 4vw + 1rem, 3.052rem);
        --text-size-xlarge: clamp(1.602rem, 3vw + 1rem, 2.441rem);
        --text-size-large: clamp(1.424rem, 2.5vw + 1rem, 1.953rem);
        --text-size-medium: clamp(1.266rem, 2vw + 1rem, 1.563rem);
        --text-size-small: clamp(1.125rem, 1.5vw + 1rem, 1.25rem);
        --text-size-base: 1rem;

        --neutral-50: #fbfbfc;
        --neutral-100: #f3f3f5;
        --neutral-200: #e8e8ea;
        --neutral-300: #dcdce0;
        --neutral-400: #d1d1d6;
        --neutral-500: #b2b2ba;
        --neutral-600: #a0a0b0;
        --neutral-700: #565660;
        --neutral-800: #2b2b30;
        --neutral-900: #161618;

        --primary-50: #d1f4dd;
        --primary-50: #d1f4dd;
        --primary-100: #a3eaba;
        --primary-200: #75df98;
        --primary-300: #48d575;
        --primary-400: #2bba59;
        --primary-500: #208c43;
        --primary-600: #1b7538;
        --primary-700: #155d2d;
        --primary-800: #104621;
        --primary-900: #0b2f16;

        --success-500: #b3e145;
        --success-700: #8fce10;
        --success-900: #5c9408;

        --error-500: #ff745c;
        --error-700: #ff3426;
        --error-900: #b71323;

        --glass-color: rgba(255, 255, 255, 0.1);
        --blur-effect: blur(8px);

        --image-background: rgba(0, 0, 0, 0.4);
        --image-background-hover: rgba(0, 0, 0, 0.5);

        --box-shadow: 0px 6px 12px 0px rgba(0, 0, 0, 0.1);
        --box-shadow-hover: 0px 6px 12px 0px rgba(0, 0, 0, 0.25);
        --border-radius-in: 2.5px;
        --border-radius-out: 5px;

        --max-width: 1336px;

        interpolate-size: allow-keywords;
        color-scheme: light;
    }

    *,
    *::before,
    *::after {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    article,
    aside,
    details,
    dialog,
    figcaption,
    figure,
    footer,
    header,
    hgroup,
    main,
    menu,
    nav,
    section,
    summary,
    template,
    video,
    audio,
    canvas,
    picture {
        display: block;
    }

    ul,
    ol {
        padding-left: 0;
        list-style: none;
    }

    a {
        color: inherit;
        text-decoration: none;
    }

    button,
    input,
    select,
    textarea {
        font-family: inherit;
        font-size: inherit;
        line-height: normal;
        border: none;
        background: none;
        color: inherit;
    }

    button,
    a,
    input[type="button"],
    input[type="reset"],
    input[type="submit"],
    input[type="checkbox"],
    input[type="radio"] {
        cursor: pointer;
    }

    table {
        border-collapse: collapse;
        border-spacing: 0;
        width: 100%;
    }

    blockquote,
    q {
        quotes: none;
    }

    blockquote::before,
    blockquote::after,
    q::before,
    q::after {
        content: "";
        content: none;
    }

    dialog {
        background: var(--neutral-50);
        border: none;
    }

    template {
        display: none;
    }

    address {
        font-style: normal;
    }

    html {
        scroll-behavior: smooth;
        scrollbar-width: thin;
    }

    html:has(:target#testimony-0, :target#testimony-1, :target#testimony-2, :target#testimony-3, :target#testimony-4) {
        scroll-padding-top: calc(144px + 3rem);
    }

    body {
        background-color: var(--neutral-50);
        color: var(--neutral-900);
        font-size: var(--text-size-base);
        font-family: var(--font-family);
        font-weight: var(--font-weight-normal);
        line-height: 1.75;
        text-wrap: pretty;
    }

    :is(h1, h2, h3, h4, h5, h6) {
        font-weight: var(--font-weight-title);
        line-height: 1.25;
        text-wrap: balance;
    }

    h1 {
        font-size: var(--text-size-mega);
    }

    h2 {
        font-size: var(--text-size-huge);
    }

    h3 {
        font-size: var(--text-size-xlarge);
    }

    h4 {
        font-size: var(--text-size-large);
    }

    h5 {
        font-size: var(--text-size-medium);
    }

    h6 {
        font-size: var(--text-size-small);
    }

    .root {
        position: relative;
        display: flex;
        flex-direction: column;
        min-height: 100vh;
    }

    :focus-visible {
        outline-width: 2px;
        outline-offset: 0px;
        border-radius: 2px;
    }
</style>
