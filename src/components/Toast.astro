---
import CloseIcon from "@icons/CloseIcon.astro";
---

<div id="toast" class="toast">
    <aside></aside>
    <section id="toast-content">
        <figure id="toast-icon-container"></figure>
        <div>
            <h6 id="toast-title"></h6>
            <p id="toast-message"></p>
        </div>
        <button id="toast-close-btn">
            <CloseIcon width={24} height={24} color="var(--neutral-600)" />
        </button>
    </section>
</div>

<style>
    .toast {
        position: fixed;
        right: 1rem;
        bottom: -100%;
        display: flex;
        width: 350px;
        background-color: var(--neutral-50);
        box-shadow: var(--box-shadow);
        border-radius: var(--border-radius-in);
        overflow: hidden;
        opacity: 0;
        transition:
            bottom 0.3s ease-in-out,
            opacity 0.3s ease-in-out;
        z-index: 999;
    }

    .toast.active {
        bottom: 1rem;
        opacity: 1;
    }

    .toast > aside {
        width: 5px;
    }

    .toast.success > aside {
        background-color: var(--success-500);
    }

    .toast.error > aside {
        background-color: var(--error-500);
    }

    .toast > section {
        flex: 1;
        display: flex;
        align-items: start;
        gap: 1rem;
        padding: 1rem;
    }

    .toast > section > figure,
    .toast > section > button {
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .toast > section > div > p {
        color: var(--neutral-600);
        font-size: 0.9rem;
    }

    .toast > section > button {
        margin-left: auto;
        background-color: transparent;
        border: none;
        display: grid;
        place-items: center;
    }

    @media screen and (width <= 480px) {
        .toast {
            width: calc(100% - 2rem);
        }
    }
</style>
