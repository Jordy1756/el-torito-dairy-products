---
import { Image } from "astro:assets";

type Props = {
    id: string;
    name: string;
    image: {
        src: string;
        alt: string;
    };
    weight: string;
    category: string;
};

const { id, name, image, weight, category } = Astro.props;
---

<article class="product__card">
    <Image src={image.src} alt={image.alt} width={500} height={500} />

    <div>
        <!-- <p>{weight}</p> -->
        <div>
            <h6>{category}</h6>
            <h5>{name}</h5>
        </div>
    </div>
</article>

<style define:vars={{ "grid-area": id }}>
    .product__card {
        position: relative;
        grid-area: var(--grid-area);
        border-radius: var(--border-radius-out);
        box-shadow: var(--box-shadow);
        color: var(--neutral-50);
        animation: revealProduct linear both;
        animation-timeline: view();
        animation-range: entry 25% cover 35%;
        overflow: hidden;
    }

    .product__card > img {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        filter: brightness(0.5);
        transition:
            scale 0.3s ease-in-out,
            filter 0.3s ease-in-out;
        z-index: -1;
    }

    .product__card:hover > img {
        scale: 1.1;
    }

    .product__card > div {
        display: flex;
        flex-direction: column;
        justify-content: end;
        gap: 2rem;
        padding: 1rem;
        height: 100%;
    }

    .product__card > div > div {
        display: flex;
        flex-direction: column;
        gap: 0.25rem;
    }

    .product__card > div > div > h6 {
        color: var(--primary-200);
    }

    .product__card > div > div > h5 {
        /* color: var(--primary-50); */
    }

    .product__card > div > p {
        color: var(--primary-200);
    }

    @keyframes revealProduct {
        from {
            opacity: 0;
            transform: translateY(50%);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @media screen and (width <= 520px) {
        .product__card {
            aspect-ratio: 4 / 3;
            min-height: auto;
        }
    }
</style>
