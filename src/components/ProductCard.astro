---
import { Image } from "astro:assets";

type Props = {
    id: string;
    name: string;
    image: { src: string; alt: string };
    description: string;
};

const { id, name, image, description } = Astro.props;
---

<article class="product__card">
    <Image src={image.src} alt={image.alt} width={500} height={500} />
    <div>
        <h5>{name}</h5>
        <p>{description}</p>
    </div>
</article>

<style define:vars={{ "grid-area": id }}>
    .product__card {
        position: relative;
        grid-area: var(--grid-area);
        border-radius: var(--border-radius-out);
        animation: revealProduct linear both;
        animation-timeline: view();
        animation-range: entry 25% cover 45%;
        overflow: hidden;
    }

    .product__card > img {
        position: absolute;
        inset: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center;
        filter: brightness(0.6);
        transition:
            scale 0.3s ease-in-out,
            filter 0.3s ease-in-out;
    }

    .product__card:hover > img {
        scale: 1.1;
        filter: brightness(0.5);
    }

    .product__card > div {
        padding: 1rem;
        width: 100%;
        position: absolute;
        bottom: -0.5rem;
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        color: var(--neutral-50);
        transition: bottom 0.2s ease-in-out;
    }

    .product__card:hover > div {
        bottom: 0;
    }

    .product__card > div > p {
        height: 0;
        overflow: hidden;
        transition: height 0.2s ease-in-out;
    }

    .product__card:hover > div > p {
        height: auto;
    }

    @keyframes revealProduct {
        from {
            opacity: 0;
            transform: translateY(50%);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @media screen and (width <= 520px) {
        .product__card {
            aspect-ratio: 4 / 3;
            min-height: auto;
        }
    }
</style>
