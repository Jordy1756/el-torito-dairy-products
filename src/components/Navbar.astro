---
import Actionable from "./Actionable.astro";
import { Image } from "astro:assets";

import { basics } from "@data";

type Props = {
    baseUrl: "/" | "/who-we-are";
    classNames?: ("slide__in-down" | "on__dark-bg")[];
};

const { baseUrl, classNames } = Astro.props;
const { name, logo } = basics;
---

<nav id="navbar" class:list={["navbar", ...(classNames || [])]}>
    <div>
        <a href="/#"><Image src={logo} alt={`Logo de ${name}`} width={43} height={43} /></a>
        <button id="menu-btn" type="button">
            <span style="--index: 3"></span>
            <span style="--index: 2"></span>
            <span style="--index: 1"></span>
        </button>
    </div>
    <ul>
        <li><a href="/who-we-are#about-us">Sobre nosotros</a></li>
        <li><a href="/who-we-are#testimonies">Testimonios</a></li>
        <li><a href="/who-we-are#our-team">Nuestro equipo</a></li>
    </ul>
    <aside>
        <Actionable type="CTA" className="primary" href="/#products">Productos</Actionable>
        <Actionable type="CTA" className="secondary" href={`${baseUrl}#contact-us`}>Contacto</Actionable>
    </aside>
</nav>
<div id="overlay"></div>

<style>
    aside {
        display: flex;
        gap: 1rem;
    }

    .navbar {
        width: min(100%, var(--max-width));
        display: flex;
        align-items: center;
        gap: 2rem;
        color: var(--neutral-900);
        transition:
            width 0.3s ease-in-out,
            padding 0.2s ease-in-out,
            background-color 0.2s ease-in-out,
            color 0.2s ease-in-out;
    }

    .navbar.on__dark-bg {
        color: var(--neutral-50);
    }

    .navbar.slide__in-down {
        animation: slideInDown 0.5s ease-in-out;
    }

    .navbar > div {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-right: auto;
    }

    .navbar > div > a {
        display: flex;
    }

    .navbar > div > button {
        display: none;
    }

    .navbar > div > a > img {
        max-width: 43px;
        height: auto;
        object-fit: contain;
    }

    .navbar > ul {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .navbar > ul > li::before {
        content: "";
        position: absolute;
        bottom: 0;
        left: 50%;
        width: 0;
        height: 1px;
        background-color: var(--neutral-900);
        transition:
            left 0.3s ease-in-out,
            width 0.3s ease-in-out;
    }

    .navbar.on__dark-bg > ul > li::before {
        background-color: var(--neutral-50);
    }

    .navbar > ul > li {
        position: relative;
    }

    .navbar > ul > li:hover::before {
        left: 0;
        width: 100%;
    }

    /* NAVBAR SCROLLED */

    .navbar.scrolled {
        position: fixed;
        top: 0;
        left: 50%;
        transform: translateX(-50%);
        padding: 0.5rem;
        background-color: var(--neutral-50);
        color: var(--neutral-900);
        border-radius: none;
        border-bottom: 1px solid var(--neutral-300);
    }

    .navbar.scrolled > div > button > span {
        background-color: var(--primary-500);
    }

    .navbar.scrolled > ul > li::before {
        background-color: var(--neutral-900);
    }

    @media screen and (width > 1542px) {
        .navbar.scrolled::before,
        .navbar.scrolled::after {
            content: "";
            position: absolute;
            bottom: -1px;
            width: 100%;
            border-bottom: 1px solid var(--neutral-300);
        }

        .navbar.scrolled::before {
            left: 100%;
        }

        .navbar.scrolled::after {
            right: 100%;
        }
    }

    @media screen and (width <= 1542px) {
        .navbar.scrolled {
            padding-inline: 1rem;
        }
    }

    @media screen and (width <= 777px) {
        .navbar > div > button {
            display: flex;
            width: 36px;
            height: 24px;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            background-color: transparent;
            border: none;
        }

        .navbar > div > button > span {
            width: calc(var(--index) * 33.33%);
            height: 3px;
            background-color: var(--neutral-50);
            border-radius: var(--border-radius-out);
            transition:
                width 0.9s ease-in-out,
                transform 0.9s ease-in-out,
                opacity 0.9s ease-in-out,
                background-color 0.6s ease-in-out;
        }

        .navbar > ul {
            display: none;
            padding-block: 1rem;
            border-top: 1px solid var(--neutral-300);
        }

        /* NAV OPEN */

        .navbar.open {
            padding: 1rem;
            position: fixed;
            top: 0;
            left: 0;
            width: auto;
            height: 100dvh;
            flex-direction: column;
            align-items: start;
            gap: 1rem;
            background-color: var(--neutral-50);
            color: var(--neutral-900);
            border-radius: 0 var(--border-radius-out) var(--border-radius-out) 0;
            z-index: 998;
        }

        .navbar.open.scrolled {
            transform: none;
        }

        .navbar.open > div {
            width: 100%;
        }

        .navbar.open > div > button {
            margin-left: auto;
        }

        .navbar.open > div > button > span {
            background-color: var(--neutral-900);
            width: 75%;
        }

        .navbar.open.scrolled > div > button > span {
            background-color: var(--primary-900);
        }

        .navbar.open > div > button > span:nth-child(1) {
            transform: translateX(12px) translateY(10.5px) rotate(45deg);
        }

        .navbar.open > div > button > span:nth-child(2) {
            opacity: 0;
        }

        .navbar.open > div > button > span:nth-child(3) {
            transform: translateX(12px) translateY(-10.5px) rotate(-45deg);
        }

        .navbar.open > ul {
            width: 100%;
            display: flex;
            flex-direction: column;
            flex: 1;
            align-items: start;
        }

        .navbar.open > ul > li {
            width: 100%;
        }

        .navbar + div {
            display: none;
            transition: background-color 0.3s ease-in-out;
        }

        .navbar.open + div {
            display: block;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100dvh;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: 997;
        }
    }

    @keyframes slideInDown {
        from {
            transform: translateY(-700px);
            opacity: 0;
        }
        to {
            transform: translateY(0);
            opacity: 1;
        }
    }
</style>
