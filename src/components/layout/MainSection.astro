---
interface Props {
    id: "our-team" | "testimonies" | "products" | "about-us" | "FAQ" | "contact-us";
    paddingInline?: "1rem" | 0;
}

const { id, paddingInline = "1rem" } = Astro.props;
---

<section id={id}>
    <slot />
</section>

<style define:vars={{ "padding-inline": paddingInline }}>
    section {
        padding-block: calc(44px + 2rem);
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    @media screen and (width < 1542px) {
        section {
            padding-inline: var(--padding-inline);
        }
    }
</style>
