---
import CloseIcon from "@components/icons/Close.astro";
import Logo from "@components/icons/Logo.astro";
import MenuIcon from "@components/icons/Menu.astro";
import Link from "@components/ui/Link.astro";

import { basics } from "@data";

const pathname = Astro.url.pathname;
const { name } = basics;
---

<nav id="navbar">
    <div class="brand">
        <a href="/#" aria-label={`Ir a la página principal de ${name}`} title={`Ir a la página principal de ${name}`}>
            <Logo height={45} class="logo" />
        </a>
        <button
            id="menu-btn"
            type="button"
            title="Abrir menú de navegación"
            aria-label="Abrir menú de navegación"
            aria-expanded="false"
            aria-controls="navbar-menu-container"
        >
            <MenuIcon width={32} class="menu__icon" />
            <CloseIcon width={24} class="close__icon" />
        </button>
    </div>
    <div class="separator"></div>
    <div id="navbar-menu-container" class="menu__container">
        <ul>
            <li>
                <Link href="/#" aria-label={`Ir a la página principal de ${name}`}>Home</Link>
            </li>
            <li data-link="about-us">
                <Link href="/who-we-are#about-us" aria-label={`Ir a la sección Sobre nosotros de ${name}`}>
                    Sobre nosotros
                </Link>
            </li>
            <li data-link="testimonies">
                <Link href="/who-we-are#testimonies" aria-label={`Ir a la sección Testimonios de ${name}`}>
                    Testimonios
                </Link>
            </li>
            <li data-link="our-team">
                <Link href="/who-we-are#our-team" aria-label={`Ir a la sección Nuestro equipo de ${name}`}>
                    Nuestro equipo
                </Link>
            </li>
        </ul>
        <div>
            <Link variant="primary" href="/#products" aria-label={`Ir a la sección Productos de ${name}`}>
                Productos
            </Link>
            <Link
                variant="secondary"
                href={`${pathname}#contact-us`}
                aria-label={`Ir a la sección Contacto de ${name}`}
            >
                Contacto
            </Link>
        </div>
    </div>
</nav>
<div id="overlay" class="overlay"></div>

<script>
    const navbar = document.getElementById("navbar") as HTMLElement;
    const menuBtn = document.getElementById("menu-btn") as HTMLButtonElement;
    const overlay = document.getElementById("overlay") as HTMLElement;

    menuBtn.addEventListener("click", () => {
        const isExpanded = menuBtn.getAttribute("aria-expanded") === "true" || false;
        navbar.classList.toggle("open");
    });

    overlay.addEventListener("click", () => {
        navbar.classList.remove("open");
        menuBtn.setAttribute("aria-expanded", "false");
    });
</script>

<style is:global>
    .banner > nav {
        animation: slideInDown 0.5s ease-in-out;
    }

    .banner .menu__container > ul > li:first-child > .link::before {
        left: 0;
        width: 100%;
    }
</style>

<style>
    nav,
    .brand,
    .brand > button,
    .menu__container,
    .menu__container > ul,
    .menu__container > div {
        display: flex;
        align-items: center;
    }

    nav {
        justify-content: space-between;
        gap: 2rem;
        width: min(100%, var(--max-width));
    }

    .brand,
    .menu__container > ul {
        gap: 1rem;
    }

    .brand > a {
        display: flex;
    }

    .brand > a > .logo {
        object-fit: contain;
        color: light-dark(var(--neutral-900), var(--neutral-50));
    }

    .brand > button {
        display: none;
    }

    .separator {
        display: none;
    }

    .menu__container {
        gap: 1.5rem;
    }

    .menu__container > div {
        gap: 0.5rem;
    }

    nav ~ .overlay {
        position: fixed;
        inset: 0;
        background-color: transparent;
        z-index: -1;
        transition: background-color 0.3s ease-in-out;
    }

    @media (width < 868px) {
        nav.open {
            position: fixed;
            top: 0;
            left: 0;
            flex-direction: column;
            align-items: start;
            justify-content: flex-start;
            gap: 1rem;
            padding: 0.5rem 1rem;
            width: min(350px, 75%);
            height: 100dvh;
            background-color: var(--neutral-50);
            border-top-right-radius: var(--border-radius-out);
            border-bottom-right-radius: var(--border-radius-out);
            color-scheme: light;
            z-index: 998;
        }

        @keyframes closeNavbar {
            from {
                left: 0;
            }
            to {
                left: -100%;
            }
        }

        nav.open > .brand {
            justify-content: space-between;
            width: 100%;
        }

        .brand > button {
            --size: 32px;
            position: relative;
            display: flex;
            width: var(--size);
            height: var(--size);
        }

        nav > .brand > button .menu__icon,
        nav > .brand > button > .close__icon {
            position: absolute;
            top: 50%;
            left: 50%;
            color: light-dark(var(--neutral-900), var(--neutral-50));
            transition: transform 0.3s ease-in-out;
        }

        nav > .brand > button .menu__icon {
            transform: translate(-50%, -50%);
        }

        nav.open > .brand > button > .menu__icon {
            transform: translate(-50%, -700%);
        }

        nav > .brand > button > .close__icon {
            transform: translate(-50%, -700%);
        }

        nav.open .brand > button .close__icon {
            transform: translate(-50%, -50%);
        }

        nav.open > .separator {
            display: block;
            width: 100%;
            height: 1px;
            background-color: var(--neutral-200);
        }

        nav.open > .menu__container {
            flex: 1;
            flex-direction: column;
            align-items: start;
            gap: 1rem;
            width: 100%;
            overflow-y: scroll;
        }

        nav > .menu__container > ul {
            display: none;
        }

        nav.open > .menu__container > ul {
            flex: 1;
            display: flex;
            flex-direction: column;
            align-items: start;
            gap: 0.5rem;
        }

        nav.open > .menu__container > div {
            flex-wrap: wrap;
            width: 100%;
        }

        nav.open > .menu__container > div > a {
            flex: 1;
        }

        nav.open ~ .overlay {
            inset: 0;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: 997;
        }
    }

    @media (width < 480px) {
        nav > .menu__container > div > a.secondary {
            display: none;
        }

        nav.open > .menu__container > div > a.secondary {
            display: flex;
        }
    }

    @keyframes slideInDown {
        from {
            transform: translateY(-700px);
            opacity: 0;
        }
        to {
            transform: translateY(0);
            opacity: 1;
        }
    }
</style>
