---
import CloseIcon from "@components/icons/Close.astro";
import Logo from "@components/icons/Logo.astro";
import MenuIcon from "@components/icons/Menu.astro";
import Link from "@components/ui/Link.astro";

import { basics } from "@data";

const pathname = Astro.url.pathname;
const { name } = basics;

const menuItems = [
    { href: "/", label: "Home", aria: `Ir a la página principal de ${name}` },
    {
        href: "/who-we-are#about-us",
        label: "Sobre nosotros",
        aria: `Ir a la sección Sobre nosotros de ${name}`,
        dataLink: "about-us",
    },
    {
        href: "/who-we-are#testimonies",
        label: "Testimonios",
        aria: `Ir a la sección Testimonios de ${name}`,
        dataLink: "testimonies",
    },
    {
        href: "/who-we-are#our-team",
        label: "Nuestro equipo",
        aria: `Ir a la sección Nuestro equipo de ${name}`,
        dataLink: "our-team",
    },
];
---

<nav id="navbar">
    <div class="brand">
        <a href="/#" aria-label={`Ir a la página principal de ${name}`} title={`Ir a la página principal de ${name}`}>
            <Logo height={45} class="logo" />
        </a>
        <button
            id="menu-btn"
            type="button"
            title="Abrir menú de navegación"
            aria-label="Abrir menú de navegación"
            aria-expanded="false"
            aria-controls="navbar-menu-container"
        >
            <MenuIcon width={32} class="menu__icon" />
            <CloseIcon width={24} class="close__icon" />
        </button>
    </div>
    <div class="separator"></div>
    <div id="navbar-menu-container" class="menu__container">
        <ul>
            {
                menuItems.map(({ href, label, aria, dataLink }) => (
                    <li data-link={dataLink}>
                        <Link href={href} aria-label={aria}>
                            {label}
                        </Link>
                    </li>
                ))
            }
        </ul>
        <div>
            <Link variant="primary" href="/#products" aria-label={`Ir a la sección Productos de ${name}`}>
                Productos
            </Link>
            <Link
                variant="secondary"
                href={`${pathname}#contact-us`}
                aria-label={`Ir a la sección Contacto de ${name}`}
            >
                Contacto
            </Link>
        </div>
    </div>
</nav>
<div id="overlay" class="overlay"></div>
<div class="navbar__spacer"></div>

<script>
    const navbar = document.getElementById("navbar") as HTMLElement;
    const menuBtn = document.getElementById("menu-btn") as HTMLButtonElement;
    const overlay = document.getElementById("overlay") as HTMLDivElement;

    menuBtn.addEventListener("click", () => {
        const isExpanded = menuBtn.getAttribute("aria-expanded") === "true" || false;
        navbar.classList.toggle("open");
        navbar.classList.toggle("slide_in--down");
    });

    overlay.addEventListener("click", () => {
        navbar.classList.remove("open");
        navbar.classList.add("closing");
        menuBtn.setAttribute("aria-expanded", "false");

        setTimeout(() => {
            navbar.classList.remove("closing");
        }, 300);
    });
</script>

<style is:global>
    .banner > nav:is(:not(.slide_in--down)) {
        animation: slideInDown 2s ease-in-out;
    }

    .banner > nav:is(.open, .closing) {
        padding: 1rem;
    }

    .banner .menu__container > ul > li:first-child > .link::before {
        left: 0;
        width: 100%;
    }
</style>

<style>
    nav,
    .brand,
    .brand > button,
    .menu__container,
    .menu__container > ul,
    .menu__container > div {
        display: flex;
        align-items: center;
    }

    nav {
        justify-content: space-between;
        gap: 2rem;
        width: min(100%, var(--max-width));
    }

    .brand,
    .menu__container > ul {
        gap: 1rem;
    }

    .brand > a {
        display: flex;
    }

    .brand > a > .logo {
        object-fit: contain;
        color: light-dark(var(--neutral-900), var(--neutral-50));
    }

    .brand > button {
        display: none;
    }

    .separator {
        display: none;
    }

    .menu__container {
        gap: 1.5rem;
    }

    .menu__container > div {
        gap: 0.5rem;
    }

    nav ~ .overlay {
        position: fixed;
        inset: 0;
        background-color: transparent;
        z-index: -1;
        transition: background-color 0.3s ease-in-out;
    }

    .navbar__spacer {
        display: none;
    }

    @media (width < 868px) {
        nav.slide_in--down {
            animation: slideInDown 0.3s ease-in-out;
        }

        nav:is(.open, .closing) {
            position: fixed;
            top: 0;
            flex-direction: column;
            align-items: start;
            justify-content: flex-start;
            gap: 1rem;
            padding: 0.5rem 1rem;
            width: min(350px, 75%);
            height: 100dvh;
            background-color: var(--neutral-50);
            border-top-right-radius: var(--border-radius-out);
            border-bottom-right-radius: var(--border-radius-out);
            color-scheme: light;
            z-index: 998;
        }

        nav.open {
            animation: openNavbar 0.3s ease-in-out forwards;
        }

        nav.closing {
            animation: closeNavbar 0.3s ease-in-out forwards;
        }

        nav:is(.open, .closing) > .brand {
            justify-content: space-between;
            width: 100%;
        }

        .brand > button {
            --size: 32px;
            position: relative;
            display: flex;
            width: var(--size);
            height: var(--size);
        }

        nav > .brand > button .menu__icon,
        nav > .brand > button > .close__icon {
            color: light-dark(var(--neutral-900), var(--neutral-50));
        }

        nav > .brand > button > .close__icon,
        nav:is(.open, .closing) > .brand > button > .menu__icon {
            display: none;
        }

        nav:is(.open, .closing) .brand > button .close__icon {
            display: flex;
        }

        nav:is(.open, .closing) > .separator {
            display: block;
            width: 100%;
            height: 1px;
            background-color: var(--neutral-200);
        }

        nav:is(.open, .closing) > .menu__container {
            flex: 1;
            flex-direction: column;
            align-items: start;
            gap: 1rem;
            width: 100%;
            overflow-y: scroll;
        }

        nav > .menu__container > ul {
            display: none;
        }

        nav:is(.open, .closing) > .menu__container > ul {
            flex: 1;
            display: flex;
            flex-direction: column;
            align-items: start;
            gap: 0.5rem;
        }

        nav:is(.open, .closing) > .menu__container > div {
            flex-wrap: wrap;
            width: 100%;
        }

        nav:is(.open, .closing) > .menu__container > div > a {
            flex: 1;
        }

        nav:is(.open, .closing) ~ .overlay {
            inset: 0;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: 997;
        }

        nav:is(.open, .closing) ~ .navbar__spacer {
            display: block;
            width: 100%;
            height: 49px;
        }

        @keyframes openNavbar {
            from {
                left: -100%;
            }
            to {
                left: 0;
            }
        }

        @keyframes closeNavbar {
            from {
                left: 0;
            }
            to {
                left: -100%;
            }
        }
    }

    @media (width < 480px) {
        nav > .menu__container > div > a.secondary {
            display: none;
        }

        nav:is(.open, .closing) > .menu__container > div > a.secondary {
            display: flex;
        }
    }

    @keyframes slideInDown {
        from {
            transform: translateY(-700px);
            opacity: 0;
        }
        to {
            transform: translateY(0);
            opacity: 1;
        }
    }
</style>
