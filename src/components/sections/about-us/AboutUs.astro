---
import MainSection from "@components/layout/MainSection.astro";
import AboutUsCard from "@components/sections/about-us/AboutUsCard.astro";
import { aboutUsCards } from "@data";
---

<MainSection id="about-us" class="about__us">
  <header>
    <h2>Sobre Nosotros</h2>
    <p>Conoce m√°s sobre nosotros y lo que hacemos.</p>
  </header>
  <div>
    {
      aboutUsCards.map(({ title, content, image }, index) => (
        <AboutUsCard number={(index + 1).toString().padStart(2, "0")} title={title} content={content} image={image} />
      ))
    }
  </div>
</MainSection>

<style>
  .about__us > header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .about__us > div {
    display: flex;
    flex-direction: column;
    gap: 5rem;
    contain: paint;
  }

  @media screen and (width <= 1000px) {
    .about__us > header {
      margin-bottom: 2rem;
    }

    .about__us > div {
      gap: 3rem;
    }
  }

  @media screen and (width <= 700px) {
    .about__us > header {
      margin-bottom: 1rem;
    }

    .about__us > div {
      gap: 2rem;
    }
  }
</style>
