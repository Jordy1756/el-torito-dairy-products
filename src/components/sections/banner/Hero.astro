---
import Link from "@components/ui/Link.astro";
import { basics } from "@data";

const { name, summary } = basics;
---

<section class="hero">
  <article>
    <div>
      <h1 translate="no">{name}</h1>
      <p>{summary}</p>
    </div>
    <Link variant="primary" href="/#products" aria-label={`Ir a la secciÃ³n Productos de ${name}`}>Productos</Link>
  </article>
  <div id="carousel-controls">
    {
      Array.from({ length: 4 }).map((_, index) => (
        <span style={{ "--index": index }}>{(index + 1).toString().padStart(2, "0")}</span>
      ))
    }
  </div>
</section>

<style>
  section {
    flex: 1;
    width: min(100%, var(--max-width));
    color: var(--neutral-50);
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 2rem;
  }

  section > div,
  section > article,
  section > article > div {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  section > article {
    align-items: start;
    animation: slideInRight 0.5s ease-in-out;
  }

  section > article > div {
    gap: 0.25rem;
  }

  section > article > div > p {
    max-width: 50ch;
  }

  section > div {
    align-items: center;
    animation: slideInLeft 0.5s ease-in-out;
  }

  section > div > span {
    animation: changeNumber 20s ease-in-out infinite;
    animation-delay: calc(var(--index) * 5s);
  }

  @media screen and (width <= 480px) {
    section > div {
      display: none;
    }
  }

  @keyframes slideInRight {
    from {
      transform: translateX(-700px);
      opacity: 0;
    }
    to {
      transform: translateX(0);
      opacity: 1;
    }
  }

  @keyframes slideInLeft {
    from {
      transform: translateX(700px);
      opacity: 0;
    }
    to {
      transform: translateX(0);
      opacity: 1;
    }
  }

  @keyframes changeNumber {
    1%,
    24% {
      transform: scale(1.75);
      font-weight: 400;
    }
    0%,
    25%,
    100% {
      transform: scale(1);
    }
  }
</style>
