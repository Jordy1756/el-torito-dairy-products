---
import { Image } from "astro:assets";

interface Props {
    id: string;
    name: string;
    image: {
        src: string;
        alt: string;
    };
    weight: string;
    highlight: string;
}

const { id, name, image, highlight } = Astro.props;
---

<article class="product__card">
    <figure>
        <Image src={image.src} alt={image.alt} width={500} height={500} />
        <figcaption>{image.alt}</figcaption>
    </figure>
    <div>
        <span>{highlight}</span>
        <h3>{name}</h3>
    </div>
</article>

<style define:vars={{ "grid-area": id }}>
    .product__card {
        grid-area: var(--grid-area);
        position: relative;
        display: flex;
        flex-direction: column;
        justify-content: flex-end;
        padding: 1rem;
        border-radius: var(--border-radius-out);
        box-shadow: var(--box-shadow);
        color: var(--neutral-50);
        /* animation: revealProduct linear both;
        animation-timeline: view();
        animation-range: entry 25% cover 35%; */
        overflow: hidden;
    }

    .product__card > figure {
        position: absolute;
        inset: 0;
    }

    .product__card > figure > img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        filter: brightness(0.5);
        transition:
            scale 0.3s ease-in-out,
            filter 0.3s ease-in-out;
        z-index: -1;
    }

    .product__card:hover > figure > img {
        scale: 1.1;
        filter: brightness(0.75);
    }

    .product__card > figure > figcaption {
        visibility: hidden;
    }

    .product__card > div {
        display: flex;
        flex-direction: column;
        gap: 0.25rem;
        transition: transform 0.3s ease-in-out;
        z-index: 2;
    }

    .product__card:hover > div {
        transform: translateY(calc(100% + 2rem));
    }

    .product__card > div > div {
        display: flex;
        flex-direction: column;
        gap: 0.25rem;
    }

    .product__card > div > span {
        font-size: var(--text-size-small);
        color: var(--primary-200);
    }

    .product__card > div > h3 {
        font-size: var(--text-size-medium);
    }

    @keyframes revealProduct {
        from {
            opacity: 0;
            transform: translateY(50%);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @media screen and (width <= 520px) {
        .product__card {
            aspect-ratio: 4 / 3;
            min-height: auto;
        }
    }
</style>
