---
import AwardCard from "@components/sections/hero/AwardCard.astro";
import Link from "@components/ui/Link.astro";
import { awards, basics } from "@data";

const { name, summary } = basics;
const totalAwards = awards.length;
---

<section id="hero" class="hero">
  <div class="hero-content">
    <article>
      <div>
        <h1 translate="no">{name}</h1>
        <p>{summary}</p>
      </div>
      <Link variant="primary" href="/#products" aria-label={`Ir a la secciÃ³n Productos de ${name}`}>Productos</Link>
    </article>
    <aside>
      {
        Array.from({ length: 4 }).map((_, index) => (
          <span style={{ "--index": index }}>{(index + 1).toString().padStart(2, "0")}</span>
        ))
      }
    </aside>
  </div>
  <aside class="awards">
    {
      awards.map(({ title, value }, index) => (
        <AwardCard index={index} title={title} value={value} totalAwards={totalAwards} />
      ))
    }
  </aside>
</section>

<style>
  .hero::before {
    content: "";
    position: absolute;
    inset: 0;
    background-color: var(--image-background-hover);
    z-index: -1;
  }

  .hero {
    position: relative;
    display: flex;
    align-items: center;
    flex-direction: column;
    gap: 5rem;
    width: 100%;
    min-height: 100vh;
    padding: 1rem;
    color: var(--neutral-50);
    background-repeat: no-repeat;
    background-position: center center;
    background-size: cover;
    background-attachment: fixed;
    animation: changeBackground 20s infinite linear;
    color-scheme: dark;
    z-index: 1;
  }

  .hero-content {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 2rem;
    margin-top: calc(81px + 4.5rem);
    width: min(100%, var(--max-width));
  }

  .hero-content > aside,
  .hero-content > article,
  .hero-content > article > div {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .hero-content > article {
    align-items: start;
    animation: slideInRight 0.5s ease-in-out;
  }

  .hero-content > article > div {
    gap: 0.25rem;
  }

  .hero-content > article > div > p {
    max-width: 50ch;
  }

  .hero-content > aside {
    align-items: center;
    animation: slideInLeft 0.5s ease-in-out;
  }

  .hero-content > aside > span {
    animation: changeNumber 20s ease-in-out infinite;
    animation-delay: calc(var(--index) * 5s);
  }

  .awards {
    width: min(100%, var(--max-width));
    display: flex;
    justify-content: end;
    gap: 2rem;
    animation: slideInUp 0.5s ease-in-out;
  }

  @media screen and (width <= 905px) {
    .awards {
      height: 170px;
      position: relative;
    }
  }

  @media screen and (width <= 480px) {
    .hero-content > aside {
      display: none;
    }

    .awards {
      height: 160px;
    }
  }

  @keyframes slideInUp {
    from {
      transform: translateY(700px);
      opacity: 0;
    }
    to {
      transform: translateY(0);
      opacity: 1;
    }
  }

  @keyframes slideInRight {
    from {
      transform: translateX(-700px);
      opacity: 0;
    }
    to {
      transform: translateX(0);
      opacity: 1;
    }
  }

  @keyframes slideInLeft {
    from {
      transform: translateX(700px);
      opacity: 0;
    }
    to {
      transform: translateX(0);
      opacity: 1;
    }
  }

  @keyframes changeNumber {
    1%,
    24% {
      transform: scale(1.75);
      font-weight: 400;
    }
    0%,
    25%,
    100% {
      transform: scale(1);
    }
  }

  @keyframes changeBackground {
    0%,
    20% {
      background-image: url(https://res.cloudinary.com/dygwpgeq9/image/upload/v1745387808/banner_img_01_xp3kl6.webp);
    }
    25%,
    45% {
      background-image: url(https://res.cloudinary.com/dygwpgeq9/image/upload/v1745387808/banner_img_02_bnjs84.webp);
    }
    50%,
    70% {
      background-image: url(https://res.cloudinary.com/dygwpgeq9/image/upload/v1745387808/banner_img_03_ic4ksm.webp);
    }
    75%,
    95% {
      background-image: url(https://res.cloudinary.com/dygwpgeq9/image/upload/v1745387808/banner_img_04_rim6to.webp);
    }
    100% {
      background-image: url(https://res.cloudinary.com/dygwpgeq9/image/upload/v1745387808/banner_img_01_xp3kl6.webp);
    }
  }
</style>
