---
import Image from "astro/components/Image.astro";

interface Props {
  index: number;
  name: string;
  image: { src: string; alt: string };
  role: string;
  gridArea: string;
}

const { index, name, image, role, gridArea } = Astro.props;
---

<article class="our__team-card">
  <figure>
    <Image src={image.src} alt={image.alt} width={200} height={200} />
    <figcaption>{image.alt}</figcaption>
  </figure>
  <div>
    <h3>{name}</h3>
    <p>{role}</p>
  </div>
</article>

<style define:vars={{ index, "grid-area": gridArea }}>
  .our__team-card::before {
    content: "";
    position: absolute;
    inset: 0;
    background: linear-gradient(transparent, rgba(0, 0, 0, 0.5));
    opacity: 0;
    transition: opacity 0.3s ease-in-out;
    z-index: 1;
  }

  .our__team-card {
    grid-area: var(--grid-area);
    position: relative;
    padding: 1rem;
    min-width: 200px;
    min-height: 250px;
    color: var(--neutral-50);
    border-radius: var(--border-radius-out);
    overflow: hidden;
  }

  .our__team-card > figure > img {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: scale 0.3s ease-in-out;
  }

  .our__team-card > div {
    position: absolute;
    width: calc(100% - 2rem);
    border-radius: var(--border-radius-in);
    padding: 0.5rem;
    transition: bottom 0.3s ease-in-out;
    z-index: 2;
  }

  .our__team-card > div::before {
    content: "";
    position: absolute;
    inset: 0;
    background-color: var(--glass-color);
    backdrop-filter: var(--blur-effect);
    z-index: -1;
    border-radius: inherit;
  }

  .our__team-card > div > h3 {
    font-size: var(--text-size-small);
  }

  .our__team-card > div > p {
    font-size: 0.875rem;
  }

  @media screen and (width > 1024px) {
    .our__team-card:hover::before {
      opacity: 1;
    }

    .our__team-card {
      animation: scaleShift 2.5s infinite alternate calc(var(--index) * 0.5s) ease-in-out;
    }

    .our__team-card:hover {
      animation-play-state: paused;
    }

    .our__team-card:hover > figure > img {
      scale: 1.05;
    }

    .our__team-card > div {
      bottom: -100%;
    }

    .our__team-card:hover > div {
      bottom: 1rem;
    }

    @keyframes scaleShift {
      to {
        scale: 1.05;
      }
    }
  }

  @media screen and (width <= 1024px) {
    .our__team-card::before {
      opacity: 1;
    }

    .our__team-card {
      min-height: 300px;
      animation: revealTeamCard linear both;
      animation-timeline: view();
      animation-range: entry 15% cover 20%;
    }

    .our__team-card > figure > img {
      scale: 1;
    }

    .our__team-card > div {
      bottom: 1rem;
    }

    @keyframes revealTeamCard {
      from {
        opacity: 0;
        transform: translateY(50%);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
  }

  @media screen and (width <= 480px) {
    .our__team-card {
      aspect-ratio: 1 / 1;
      min-width: auto;
      min-height: auto;
    }
  }
</style>
