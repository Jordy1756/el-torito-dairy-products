---
import Layout from "@layouts/Layout.astro";
import Navbar from "@components/layout/Navbar.astro";
import Footer from "@components/layout/Footer.astro";

import { basics } from "@data";

const { name } = basics;
---

<Layout title={`404 - Página no encontrada | ${name}`}>
    <header>
        <Navbar />
    </header>
    <main>
        <h1 class="sr-only">Error 404: Página no encontrada</h1>
        <video
            autoplay
            muted
            loop
            playsinline
            aria-hidden="true"
            tabindex="-1"
            poster="https://res.cloudinary.com/dygwpgeq9/image/upload/v1764555617/404_poster_img_fis9xk.webp"
        >
            <source
                src="https://res.cloudinary.com/dygwpgeq9/video/upload/v1750731148/404_Lacteos_El_Torito_qw9n2u.mp4"
                type="video/mp4"
            />
        </video>
    </main>
    <Footer />
    <!-- <script src="../scripts/pages/404.ts"></script> -->
</Layout>

<style>
    header {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 0.5rem 1rem;
        width: 100%;
        background-color: var(--neutral-50);
        border-bottom: 1px solid var(--neutral-300);
    }

    main {
        position: relative;
        flex: 1;
        display: grid;
        place-items: center;
        min-height: calc(100dvh - 44px - 1rem);
        background-color: #fffffe;
    }

    main > .sr-only {
        position: absolute;
        width: 1px;
        height: 1px;
        padding: 0;
        margin: -1px;
        overflow: hidden;
        clip: rect(0, 0, 0, 0);
        white-space: nowrap;
        border-width: 0;
    }

    main > video {
        width: 100%;
        height: calc(100dvh - 44px - 1rem);
        object-fit: cover;
    }

    @media screen and (width <= 768px) {
        main > video {
            width: 100%;
            height: 100dvw;
            object-fit: cover;
        }
    }
</style>
