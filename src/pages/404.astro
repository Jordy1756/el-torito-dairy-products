---
import Layout from "@layouts/Layout.astro";
import Navbar from "@components/Navbar.astro";
import Footer from "@components/Footer.astro";

import { basics } from "@data";

const { name } = basics;
const baseUrl = "/";
---

<Layout title={`${name} 404`}>
    <header>
        <Navbar baseUrl={baseUrl} />
    </header>
    <main>
        <video
            autoplay
            muted
            loop
            poster="https://res.cloudinary.com/dygwpgeq9/image/upload/v1764555617/404_poster_img_fis9xk.webp"
        >
            <source
                src="https://res.cloudinary.com/dygwpgeq9/video/upload/v1750731148/404_Lacteos_El_Torito_qw9n2u.mp4"
                type="video/mp4"
            />
        </video>
    </main>
    <Footer baseUrl={baseUrl} />
    <script src="../scripts/pages/404.ts"></script>
</Layout>

<style>
    header {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 0.5rem 1rem;
        width: 100%;
        background-color: var(--neutral-50);
        border-bottom: 1px solid var(--neutral-300);
    }

    main {
        flex: 1;
        display: grid;
        place-items: center;
        min-height: calc(100dvh - 44px - 1rem);
        background-color: #fffffe;
    }

    main > video {
        width: 100%;
        height: calc(100dvh - 44px - 1rem);
        object-fit: cover;
    }

    @media screen and (width <= 768px) {
        main > video {
            width: 100%;
            height: 100dvw;
            object-fit: cover;
        }
    }
</style>
