---
import Layout from "@layouts/Layout.astro";
import PoliciesSection from "@sections/PoliciesSection.astro";
import Navbar from "@components/Navbar.astro";
import Footer from "@components/Footer.astro";

import { basics, privacyPolicySection } from "@data";

const { name } = basics;
const { title, description, content } = privacyPolicySection;
const baseUrl = "/";
---

<Layout title=`PolÃ­tica de privacidad de ${name}`>
    <header>
        <Navbar baseUrl={baseUrl} />
    </header>
    <main>
        <PoliciesSection title={title} description={description} content={content} />
    </main>
