---
import Footer from "@components/layout/Footer.astro";
import Header from "@components/layout/Header.astro";
import Policies from "@components/sections/policies/Policies.astro";
import Layout from "@layouts/Layout.astro";
import { basics, termsAndConditions } from "@data";

const { name } = basics;
const { title, description, sections } = termsAndConditions;
---

<Layout title={`TÃ©rminos y condiciones de ${name}`}>
  <Header />
  <main>
    <Policies title={title} description={description} sections={sections} />
