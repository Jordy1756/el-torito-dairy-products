---
import Layout from "@layouts/Layout.astro";
import Navbar from "@components/layout/Navbar.astro";
import Footer from "@components/layout/Footer.astro";
import Policies from "@components/sections/policies/Policies.astro";

import { basics, termsAndConditions } from "@data";

const { name } = basics;
const { title, description, sections } = termsAndConditions;
---

