  <Footer />
</Layout>

<style>
  header {
    position: sticky;
    top: 0;
    left: 0;
    display: flex;
    justify-content: center;
    padding: 0.5rem 1rem;
    border-bottom: 1px solid var(--neutral-300);
    background-color: var(--neutral-50);
    z-index: 999;
  }

  main {
    flex: 1;
    align-self: center;
    padding-block: 4.5rem;
    width: min(100%, calc(var(--max-width) / 1.5));
  }
