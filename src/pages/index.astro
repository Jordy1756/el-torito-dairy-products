---
import Layout from "@layouts/Layout.astro";
import Toast from "@components/ui/Toast.astro";
import Footer from "@components/layout/Footer.astro";
import Banner from "@components/sections/banner/Banner.astro";
import Products from "@components/sections/products/Products.astro";
import FAQ from "@components/sections/faq/FAQ.astro";
import ContactUs from "@components/sections/contact-us/ContactUs.astro";

import { basics } from "@data";

const { name } = basics;
---

<Layout title={name}>
    <Banner />
    <main>
        <Products />
        <FAQ />
        <ContactUs />
    </main>
    <Footer />
    <Toast />
</Layout>

<style>
    main {
        align-self: center;
        display: flex;
        flex-direction: column;
        gap: 4.5rem;
        padding-block: 4.5rem;
        width: min(100%, var(--max-width));
    }
</style>

<script>
    import { createBannerObserver } from "@scripts/utils/observers";

    const banner = document.querySelector("#banner") as HTMLElement;
    const navbar = banner.querySelector("#navbar") as HTMLElement;

    createBannerObserver(navbar).observe(banner);
</script>
