---
import AwardCard from "@components/AwardCard.astro";
import { awardsSection } from "@data";

const { awards } = awardsSection;
const totalAwards = awards.length;
---

<aside>
    {
        awards.map(({ title, value }, index) => (
            <AwardCard index={index} title={title} value={value} totalAwards={totalAwards} />
        ))
    }
</aside>

<style>
    aside {
        width: min(100%, var(--max-width));
        display: flex;
        justify-content: end;
        gap: 2rem;
        overflow: hidden;
        animation: slideInUp 0.5s ease-in-out;
    }

    @media screen and (width <= 905px) {
        aside {
            height: 170px;
            position: relative;
        }
    }

    @media screen and (width <= 480px) {
        aside {
            height: 160px;
        }
    }

    @keyframes slideInUp {
        from {
            transform: translateY(700px);
            opacity: 0;
        }
        to {
            transform: translateY(0);
            opacity: 1;
        }
    }
</style>
